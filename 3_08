import numpy as np

rng=np.random.default_rng()

M=rng.integers(-5,6,(7,7))
M
#array([[ 5, -1,  2,  2,  0, -4, -5],
#       [-2, -2,  2,  5, -5,  4, -4],
#       [-5,  4,  4, -2, -3, -5, -1],
#       [-1, -3, -1, -2,  0, -5, -4],
#       [-4, -5,  5,  4,  1, -4,  3],
#       [-4, -4,  3, -2,  0, -3, -3],
#       [-3,  5, -2,  3, -3, -5, -1]])

M[:,1::2]=M[:,5::-2]
M
#array([[ 5, -4,  2,  2,  0, -1, -5],
#       [-2,  4,  2,  5, -5, -2, -4],
#       [-5, -5,  4, -2, -3,  4, -1],
#       [-1, -5, -1, -2,  0, -3, -4],
#       [-4, -4,  5,  4,  1, -5,  3],
#       [-4, -3,  3, -2,  0, -4, -3],
#       [-3, -5, -2,  3, -3,  5, -1]])

#vracamo matricu u prvobitni oblik
M[:,1::2]=M[:,5::-2]
M
#array([[ 5, -1,  2,  2,  0, -4, -5],
#       [-2, -2,  2,  5, -5,  4, -4],
#       [-5,  4,  4, -2, -3, -5, -1],
#       [-1, -3, -1, -2,  0, -5, -4],
#       [-4, -5,  5,  4,  1, -4,  3],
#       [-4, -4,  3, -2,  0, -3, -3],
#       [-3,  5, -2,  3, -3, -5, -1]])

M[:,1::2]=M[::-1,1::2]
M
#array([[ 5,  5,  2,  3,  0, -5, -5],
#       [-2, -4,  2, -2, -5, -3, -4],
#       [-5, -5,  4,  4, -3, -4, -1],
#       [-1, -3, -1, -2,  0, -5, -4],
#       [-4,  4,  5, -2,  1, -5,  3],
#       [-4, -2,  3,  5,  0,  4, -3],
#       [-3, -1, -2,  2, -3, -4, -1]])
