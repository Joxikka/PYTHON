import numpy as np
rng = np.random.default_rng()

#3. zadatak

M=rng.integers(-5,6,(7,7))
M
#array([[ 4, -3,  3,  3,  2,  4,  0],
#       [ 3, -4,  2,  2, -4,  4,  2],
#       [ 1,  1, -4,  1, -4, -1,  4],
#       [-1, -4, -3, -4,  5,  4, -3],
#       [ 1,  5, -3, -3,  0,  3, -2],
#       [ 5, -3, -4,  3,  2,  5, -2],
#       [ 3,  1, -1,  3, -5,  5,  0]])



#a)

M[:,1]+=1
M
#array([[ 4, -2,  3,  3,  2,  4,  0],
#      [ 3, -3,  2,  2, -4,  4,  2],
#       [ 1,  2, -4,  1, -4, -1,  4],
#       [-1, -3, -3, -4,  5,  4, -3],
#       [ 1,  6, -3, -3,  0,  3, -2],
#       [ 5, -2, -4,  3,  2,  5, -2],
#       [ 3,  2, -1,  3, -5,  5,  0]])



#b)

M[:,3]=M[0,:]
M
#array([[ 4, -2,  3,  4,  2,  4,  0],
#       [ 3, -3,  2, -2, -4,  4,  2],
#       [ 1,  2, -4,  3, -4, -1,  4],
#       [-1, -3, -3,  3,  5,  4, -3],
#       [ 1,  6, -3,  2,  0,  3, -2],
#       [ 5, -2, -4,  4,  2,  5, -2],
#       [ 3,  2, -1,  0, -5,  5,  0]])

M[0,1]=5
M
#array([[ 4,  5,  3,  4,  2,  4,  0],
#       [ 3, -3,  2, -2, -4,  4,  2],
#       [ 1,  2, -4,  3, -4, -1,  4],
#       [-1, -3, -3,  3,  5,  4, -3],
#       [ 1,  6, -3,  2,  0,  3, -2],
#       [ 5, -2, -4,  4,  2,  5, -2],
#       [ 3,  2, -1,  0, -5,  5,  0]])


#v)

temp = M[-3:,-3:].copy()
temp
#array([[ 0,  3, -2],
#       [ 2,  5, -2],
#       [-5,  5,  0]])

M[-3:,-3:] = M[0:3,0:3]
M[0:3,0:3] = temp
M
#array([[ 0,  3, -2,  4,  2,  4,  0],
#       [ 2,  5, -2, -2, -4,  4,  2],
#       [-5,  5,  0,  3, -4, -1,  4],
#       [-1, -3, -3,  3,  5,  4, -3],
#       [ 1,  6, -3,  2,  4,  5,  3],
#       [ 5, -2, -4,  4,  3, -3,  2],
#       [ 3,  2, -1,  0,  1,  2, -4]])

temp
#array([[ 0,  3, -2],
#       [ 2,  5, -2],
#       [-5,  5,  0]])
